.div.text-center
  %h3
    ="Edit #{@location.name}"

  =simple_form_for @location, url: location_path(@location), method: :patch do |f|
    .col-md-4
    .col-md-4
      .row
        =f.input :name
        =f.input :description
        =f.input :order
        =f.input :store_id, collection: @stores, include_blank: false, selected: @location.store.try(:id)
        =f.submit 